def weather_app():
    while True:
        weather = input("How does the weather look today?? ").strip().lower()

        if weather == "hot":
            print("Stay cool and drink tons of water.")
            break
        elif weather == "cold":
            print("Keep warm and wear a jacket.")
            break
        elif weather == "rainy":
            print("Don't forget your umbrella.")
            break
        else:
            print("Sorry, didnâ€™t get you. Please try again.\n")

weather_app()